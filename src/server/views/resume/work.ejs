<div class="resume-work">

    <% if (work.logo && work.logo.length > 0) { %>
        <% if (isStaticOutput) { %>
            <img class="experience-logo" src="<%= work.logo %>" />
        <% } else { %>
            <img class="experience-logo" src="/img?path=<%= work.logo %>" />    
        <% } %>
    <% } %>

    <div class="resume-work-job">
        <div class="resume-work-title">
            <div class="resume-work-company">
                <% if (work.hasCompanyUrl) { %>
                    <a href="<%= work.url %>" target="_blank" class="company-link">
                <% } %>
                <%= work.company %>
                <% if (work.hasCompanyUrl) { %>
                    </a>
                <% } %>
            </div>
            <% if (work.role && work.role.length > 0) { %>
            <div class="resume-work-role">
                , <%= work.role %>
            </div>
            <% } %>
        </div>
        <div class="resume-date">
            <%= work.dateRangeStr %>
        </div>
    </div>

    <div class="resume-work-description">
        <div class="resume-work-summary">
            <%= work.summary %>
            <% if (work.shouldShowNewsURL) { %>
                <a href="<%= work.newsUrl %>" target="_blank" class="visible-link"><%= work.newsUrlText %></a>
            <% } %>
        </div>

        <% if (work.highlights.length > 0) { %>
            <ul class="resume-work-highlights">
                <% work.highlights.forEach(function(highlight) { %>
                    <li class="resume-highlight">
                        <%= highlight %>
                    </li>
                <% }); %>
            </ul>
        <% } %>

        <% if (work.projects.length > 0) { %>
            <ul class="resume-work-projects">
                <% work.projects.forEach(function(project) { %>
                    <li class="resume-project">
                        <div class="resume-highlight">
                            <%= project.summary %>
                            <% if (project.shouldShowURL) { %>
                                <a href="<%= project.url %>" target="_blank" class="visible-link"><%= project.urlText %></a>
                            <% } %>
                        </div>
                        <%- include('work-used', { used: project.used }); %>
                    </li>
                <% }); %>
            </ul>
        <% } %>

        <%- include('work-used', { used: work.used }); %>
    </div>
        
</div>